<div class="comments">
  {{#each this}}
  <div class="card"> 
    <div class="card-header bg-dark">&nbsp</div>
      <section class="comment">
        <div class="text">
          {{comment_text}}
        </div>
        <div class="meta">
          - {{user.username}} on {{format_date created_at}}
        </div>
      </section>
  </div>
  {{/each}}
</div>